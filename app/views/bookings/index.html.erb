            </ul>
          </div>
        </div>
        <div class="col-2">
          <div class="booking-status">
            <%= booking.status %>
          </div>
        </div>
        <div class="col-2">
          <div class="booking-button">
            <%= link_to "Cancel", houses_path, class: 'btn my-2 my-sm-0 cancel-btn' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render :partial => 'shared/footer' %>
