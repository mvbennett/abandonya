            <% else %>
              <%= cl_image_tag booking.house.photo.key, crop: :fill, class: 'img-show' %>
            <% end %>
          </div>
          <div class="mybooking-housedescription">
            <ul class="mybooking-ul">
              <li class="mybooking-title">
                <%= booking.house.name %>
              </li>
              <li>
