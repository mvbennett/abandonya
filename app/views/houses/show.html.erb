<div class="house-card">
  <h2>Spoopy Houses</h2>
  <ul class = "card-content">
    <li>
      <%= @house.name %>
    </li>
    <li>
      <%= @house.address %>
    </li>
    <li>
      <%= @house.haunted %>
    </li>
  </ul>
</div>

<div clas="booking-form">
  <h3>
    Please enter your preferred dates:
  </h3>
  <%= simple_form_for [@house, @booking] do |f| %>
    <%= f.input :start_time, as: :date, html5: true %>
    <%= f.input :end_time, as: :date, html5: true %>
    <%= f.submit %>
  <% end %>
</div>


<%= link_to "Go back", houses_path %>
